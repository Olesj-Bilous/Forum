@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="form-pane">
    <h3 class="mb-3">
        Register a new account
    </h3>

    <form asp-action="Register" method="post">
        <div class="form-group mb-2">
            <label hidden class="form-label" asp-for="Username"></label>
            <input class="form-control" asp-for="Username" />
            <span class="form-label text-danger" asp-validation-for="Username"></span>
            @if (Model.NameNotUnique)
            {
                <span class="form-label text-danger">There is already another account with this name.</span>
            }
        </div>

        <div class="form-group mb-2">
            <label hidden class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span class="form-label text-danger" asp-validation-for="Password"></span>
        </div>
        
        <div class="form-group mb-2">
            <label hidden class="form-label" asp-for="PasswordCheck"></label>
            <input class="form-control" asp-for="PasswordCheck" />
            <span class="form-label text-danger" asp-validation-for="PasswordCheck"></span>
        </div>

        <div class="form-group mb-2">
            <label hidden class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span class="form-label text-danger" asp-validation-for="Email"></span>
            @if (Model.EmailNotUnique)
            {
                <span class="form-label text-danger">There is already another account with this email address.</span>
            }
        </div>

        <input class="btn mt-1" type="submit" value="Register" />
    </form>
</div>